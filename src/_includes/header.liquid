{% if topic %}
    <div class="page-horizontal-margins container-center-horizontally" style="margin-top: 64px;">
        <h1>Hi, I'm <span class="text-secondary">{{ topic }}</span></h1>
    </div>
{% else %}
    <div class="page-horizontal-margins container-center-horizontally" style="margin-top: 64px;">
        <h1>Hi, I'm <span class="text-secondary">Aleksandr</span></h1>
    </div>

    <div class="page-horizontal-margins container-center-horizontally" style="margin-top: 32px;">
        <div class="display-flex background-secondary width-fit-content align-items-center"
            id="index-header-welcome-software-developer-block">
            <h2 class="text-dark text-bold" id="index-header-welcome-software-developer-text">
                Software developer</h2>
            <div id="index-header-welcome-software-developer-cursor-block"></div>
        </div>
    </div>

    <div class="page-horizontal-margins display-flex-wrap container-center-horizontally" style="margin-top: 32px;">
        <a href="https://github.com/aleksandersh" class="display-flex align-items-center index-social-container">
            <img class="index-social-icon" src="/assets/images/icon-github.svg">
            <p class="index-social-text">GitHub</p>
        </a>

        <a href="https://www.linkedin.com/in/aleksandr-shatalov/"
            class="display-flex align-items-center index-social-container">
            <img class="index-social-icon" src="/assets/images/icon-linkedin.svg">
            <p class="index-social-text">LinkedIn</p>
        </a>
    </div>
{% endif %}
